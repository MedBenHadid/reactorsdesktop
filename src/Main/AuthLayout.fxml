<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="600.0" maxWidth="1.7976931348623157E308"
            style="-fx-background-color: ffffff;" xmlns="http://javafx.com/javafx/11.0.1"
            fx:controller="Main.AuthLayout">
   <HBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
         AnchorPane.topAnchor="0.0">
      <children>
         <VBox alignment="CENTER" style="-fx-background-color: #473E98;">
            <padding>
               <Insets bottom="50.0" left="50.0" right="50.0" top="50.0"/>
            </padding>
            <Label fx:id="side" alignment="CENTER" text="Reactors FX" textFill="WHITE">
               <font>
                  <Font name="Segoe UI" size="18.0"/>
               </font>
            </Label>
            <Label alignment="CENTER" text="La premiére plateforme de bénévolat" textFill="WHITE">
               <font>
                  <Font name="Segoe UI" size="12.0"/>
               </font>
            </Label>
            <HBox alignment="BOTTOM_CENTER">
               <padding>
                  <Insets top="250.0"/>
               </padding>
               <JFXButton fx:id="registerButton" text="Register" textFill="WHITE">
                  <HBox.margin>
                     <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                  </HBox.margin>
               </JFXButton>
               <JFXButton fx:id="loginButton" text="Login" textFill="WHITE">
                  <HBox.margin>
                     <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                  </HBox.margin>
               </JFXButton>
            </HBox>
         </VBox>
         <VBox fx:id="mainVBox" alignment="CENTER"/>
      </children>
   </HBox>
</AnchorPane>
