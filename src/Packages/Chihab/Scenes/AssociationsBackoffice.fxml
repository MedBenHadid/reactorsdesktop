<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<StackPane xmlns:fx="http://javafx.com/fxml/1" fx:id="rootStackPane" xmlns="http://javafx.com/javafx/11.0.1"
           fx:controller="Packages.Chihab.Controllers.AssociationsBackofficeController">
   <children>
      <VBox>
         <children>
            <Label text="Associations :" textFill="#8100fa">
               <font>
                  <Font size="25.0"/>
               </font>
               <VBox.margin>
                  <Insets left="30.0" right="30.0" top="30.0"/>
               </VBox.margin>
            </Label>
            <Label fx:id="size" text="Label">
               <VBox.margin>
                  <Insets bottom="30.0" left="30.0" right="30.0"/>
               </VBox.margin>
               <font>
                  <Font name="System Italic" size="12.0"/>
               </font>
            </Label>
            <HBox alignment="CENTER_RIGHT">
               <VBox.margin>
                  <Insets right="20.0"/>
               </VBox.margin>
               <children>
                  <JFXTextField fx:id="inputName" focusColor="#8100fa" promptText="Chercher par nom"
                                unFocusColor="WHITE">
                     <HBox.margin>
                        <Insets bottom="2.0" left="2.0" right="2.0" top="2.0"/>
                     </HBox.margin>
                  </JFXTextField>
                  <JFXTextField fx:id="inputCity" focusColor="#8100fa" promptText="Chercher par ville"
                                unFocusColor="WHITE">
                     <HBox.margin>
                        <Insets bottom="2.0" left="2.0" right="2.0" top="2.0"/>
                     </HBox.margin>
                  </JFXTextField>
               </children>
            </HBox>
            <TableView fx:id="associationTableView" editable="true" tableMenuButtonVisible="true" VBox.vgrow="ALWAYS">
               <columns>
                  <TableColumn fx:id="nomCol" prefWidth="75.0" text="Nom"/>
                  <TableColumn fx:id="domaineCol" prefWidth="100.0" text="Domaine"/>
                  <TableColumn fx:id="villeCol" prefWidth="100.0" text="Ville"/>
                  <TableColumn fx:id="actions" maxWidth="150.0" minWidth="150.0" prefWidth="150.0" resizable="false">
                     <columns>
                        <TableColumn fx:id="pieceCol" maxWidth="70.0" minWidth="70.0" prefWidth="70.0" resizable="false"
                                     text="Piece"/>
                        <TableColumn fx:id="deleteOption" maxWidth="80.0" minWidth="80.0" resizable="false"
                                     text="Supprimer"/>
                        <TableColumn fx:id="statusCol" maxWidth="80.0" minWidth="80.0" text="Status"/>
                        <TableColumn fx:id="managerCol" maxWidth="100.0" minWidth="100.0" prefWidth="100.0"
                                     text="Manager"/>
                     </columns>
                  </TableColumn>
               </columns>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
               </VBox.margin>
               <effect>
                  <DropShadow color="#8100fa"/>
               </effect>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
               </columnResizePolicy>
            </TableView>
            <HBox alignment="BASELINE_RIGHT">
               <VBox.margin>
                  <Insets/>
               </VBox.margin>
               <children>
                  <JFXButton fx:id="addButton" contentDisplay="RIGHT" ripplerFill="#8100fa"
                             text="Ajouter une association">
                     <HBox.margin>
                        <Insets bottom="10.0" left="5.0" right="10.0" top="5.0"/>
                     </HBox.margin>
                  </JFXButton>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</StackPane>
