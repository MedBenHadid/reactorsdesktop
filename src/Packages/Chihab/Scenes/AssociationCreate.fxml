<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.web.WebView?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:id="rootPane" xmlns="http://javafx.com/javafx/11.0.1"
            fx:controller="Packages.Chihab.Controllers.AssociationCreateController">
    <HBox alignment="CENTER" fillHeight="false" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="10.0">
        <VBox alignment="TOP_CENTER">
            <HBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </HBox.margin>
            <JFXTextField fx:id="nomInput" focusColor="#3f8ca8" promptText="Nom de l'association"
                          unFocusColor="#670093">
                <VBox.margin>
                    <Insets bottom="20.0"/>
                </VBox.margin>
            </JFXTextField>
            <JFXTextField fx:id="phoneNumberInput" focusColor="#3f8ca8" promptText="Numero de téléphone"
                          unFocusColor="#670093">
                <VBox.margin>
                    <Insets bottom="20.0"/>
                </VBox.margin>
            </JFXTextField>
            <JFXComboBox fx:id="domaineComboBox" prefWidth="200.0" promptText="Domaine d'activité"
                         unFocusColor="#670093">
                <VBox.margin>
                    <Insets bottom="20.0"/>
                </VBox.margin>
            </JFXComboBox>
            <JFXTextArea fx:id="descriptionInput" focusColor="#3f8ca8" promptText="Description"
                         unFocusColor="#670093">
                <VBox.margin>
                    <Insets bottom="20.0"/>
                </VBox.margin>
            </JFXTextArea>
            <JFXComboBox fx:id="managerComboBox" focusColor="#670093" prefWidth="200.0"
                         promptText="Veuillez choisir un manager">
                <VBox.margin>
                    <Insets bottom="20.0"/>
                </VBox.margin>
            </JFXComboBox>
            <JFXButton fx:id="photoButton" prefWidth="200.0" ripplerFill="#9802af" text="Photo"/>
            <JFXButton fx:id="pieceButton" prefWidth="200.0" ripplerFill="#a202b7"
                       text="Piece justificative">
                <VBox.margin>
                    <Insets bottom="20.0"/>
                </VBox.margin>
            </JFXButton>
        </VBox>
        <Separator orientation="VERTICAL" prefHeight="500.0">
            <HBox.margin>
                <Insets left="10.0" right="10.0"/>
            </HBox.margin>
        </Separator>
        <VBox alignment="CENTER">
            <HBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </HBox.margin>
            <JFXTextField fx:id="rueInput" focusColor="#3f8ca8" promptText="Adresse" unFocusColor="#670093">
                <VBox.margin>
                    <Insets bottom="20.0"/>
                </VBox.margin>
            </JFXTextField>
            <JFXTextField fx:id="zipInput" focusColor="#3f8ca8" promptText="Code postale"
                          unFocusColor="#670093">
                <VBox.margin>
                    <Insets bottom="20.0"/>
                </VBox.margin>
            </JFXTextField>
            <JFXComboBox fx:id="villeComboBox" focusColor="#3f8ca8" prefWidth="200.0" promptText="Ville"
                         unFocusColor="#670093">
                <VBox.margin>
                    <Insets bottom="20.0"/>
                </VBox.margin>
            </JFXComboBox>
            <WebView fx:id="gmapWebView" prefHeight="200.0" prefWidth="-1.0">
                <VBox.margin>
                    <Insets bottom="20.0"/>
                </VBox.margin>
            </WebView>
            <HBox>
                <Label text="Horaire de travail :">
                    <HBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                    </HBox.margin>
                </Label>
                <JFXTimePicker fx:id="de" defaultColor="#670093" promptText="De">
                    <HBox.margin>
                        <Insets bottom="20.0" right="20.0" top="20.0"/>
                    </HBox.margin>
                </JFXTimePicker>
                <JFXTimePicker fx:id="vers" defaultColor="#670093" promptText="Vers">
                    <HBox.margin>
                        <Insets bottom="20.0" right="20.0" top="20.0"/>
                    </HBox.margin>
                </JFXTimePicker>
            </HBox>
            <JFXButton fx:id="validateButton" text="Joignez-Nous" textFill="#670093"/>
        </VBox>
    </HBox>
</AnchorPane>
