<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTimePicker?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.web.WebView?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:id="rootPane" xmlns="http://javafx.com/javafx/11.0.1"
            fx:controller="Packages.Chihab.Scenes.AssociationCreateController">
    <children>
        <VBox alignment="CENTER" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0"
              AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
            <children>
                <TextField fx:id="nomInput" promptText="Nom de l'association"/>
                <TextArea fx:id="descriptionInput" promptText="Description de l'association"/>
                <TextField fx:id="zipInput" minHeight="4.0" minWidth="4.0" prefWidth="100.0" promptText="Code postale"/>
                <TextField fx:id="rueInput" promptText="Rue"/>
                <TextField fx:id="phoneNumberInput" promptText="Numéro de téléphone"/>
                <ComboBox fx:id="villeComboBox" prefWidth="200.0" promptText="Ville">
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                </ComboBox>
                <WebView fx:id="gmapWebView" prefHeight="200.0" prefWidth="-1.0"/>
                <ComboBox fx:id="domaineComboBox" prefWidth="200.0" promptText="Domaine d'activité"/>
                <Button fx:id="photoButton" mnemonicParsing="false" prefWidth="200.0" text="Photo">
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                </Button>
                <Button fx:id="pieceButton" mnemonicParsing="false" prefWidth="200.0" text="Piece justificative">
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                </Button>
                <ComboBox fx:id="managerComboBox" prefWidth="200.0" promptText="Veuillez choisir un manager">
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                </ComboBox>
                <HBox>
                    <children>
                        <Label text="Horaire de travail :">
                            <HBox.margin>
                                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                            </HBox.margin>
                        </Label>
                        <JFXTimePicker fx:id="de">
                            <HBox.margin>
                                <Insets bottom="20.0" right="20.0" top="20.0"/>
                            </HBox.margin>
                        </JFXTimePicker>
                        <JFXTimePicker fx:id="vers">
                            <HBox.margin>
                                <Insets bottom="20.0" right="20.0" top="20.0"/>
                            </HBox.margin>
                        </JFXTimePicker>
                    </children>
                </HBox>
                <JFXButton fx:id="validateButton" text="Joignez-Nous"/>
            </children>
        </VBox>
        <HBox prefHeight="100.0" prefWidth="200.0">
            <children>
                <VBox prefHeight="200.0" prefWidth="100.0"/>
            </children>
        </HBox>
    </children>
</AnchorPane>
