<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane id="AnchorPane" style="-fx-background-color: #fff;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Main.SubScenes.Login.LoginController">
    <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
          AnchorPane.topAnchor="0.0">
        <padding>
            <Insets bottom="50.0" left="50.0" right="50.0" top="50.0"/>
        </padding>
        <Pane>
            <TextField fx:id="txtUsername" layoutX="7.0" prefHeight="34.0" prefWidth="275.0"
                       promptText="Nom d'utilisateur ou Email"/>
            <PasswordField fx:id="txtPassword" layoutX="9.0" layoutY="44.0" prefHeight="34.0" prefWidth="275.0"
                           promptText="Mot de passe" stylesheets="/SharedResources/Styles/Style.css"/>
            <Button fx:id="btnSignin" layoutX="146.0" layoutY="142.0" mnemonicParsing="false"
                    onMouseClicked="#handleButtonAction" prefHeight="34.0" prefWidth="137.0"
                    stylesheets="/SharedResources/Styles/Style.css" text="Sign in"/>
            <Label fx:id="btnForgot" alignment="CENTER" layoutX="14.0" layoutY="148.0" prefHeight="23.0"
                   prefWidth="93.0" text="Forgot Password" textFill="#5383ff">
                <font>
                    <Font name="Segoe UI" size="12.0"/>
                </font>
            </Label>
            <Button fx:id="btnSignup" layoutX="4.0" layoutY="214.0" mnemonicParsing="false"
                    onMouseClicked="#handleButtonAction" prefHeight="34.0" prefWidth="275.0"
                    stylesheets="/SharedResources/Styles/Style.css" text="Sign up"/>
            <Separator layoutX="2.0" layoutY="195.0" prefHeight="9.0" prefWidth="281.0"/>
            <Label alignment="CENTER" layoutX="126.0" layoutY="184.0" prefHeight="23.0" prefWidth="31.0"
                   style="-fx-background-color: #fff;" text="Or" textFill="#5b5a5a">
                <font>
                    <Font name="Segoe UI" size="12.0"/>
                </font>
            </Label>
            <Label fx:id="lblErrors" alignment="CENTER" layoutX="7.0" layoutY="102.0" prefHeight="40.0"
                   prefWidth="275.0" textFill="#ff6354">
                <font>
                    <Font name="Segoe UI" size="10.0"/>
                </font>
            </Label>
        </Pane>
    </VBox>
</AnchorPane>
